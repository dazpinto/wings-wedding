- model_class = SongRequest
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:artist) + ':'
  %br
  = @song_request.artist
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @song_request.title
%p
  %strong= model_class.human_attribute_name(:suggested_by) + ':'
  %br
  = @song_request.suggested_by

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), song_requests_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_song_request_path(@song_request), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), song_request_path(@song_request), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
