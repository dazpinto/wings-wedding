= form_for @song_request, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :artist, :class => 'control-label'
    .controls
      = f.text_field :artist, :class => 'text_field'
  .control-group
    = f.label :title, 'Song title', {:class => 'control-label'}
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :suggested_by, 'Your name', :class => 'control-label'
    .controls
      = f.text_field :suggested_by, :class => 'text_field'
      %span.help-inline Leave blank to remain anonymous
  .control-group
    .controls
      = f.submit 'Add', :class => 'btn btn-primary'