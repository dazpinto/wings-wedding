= form_for @song_request, :html => { :class => 'form-inline' } do |f|
  %span.help-inline
    Request a song
  = f.label :artist, :class => 'control-label'
  = f.text_field :artist, :class => 'text_field', :placeholder=>'Artist'
  = f.label :title, 'Song title', {:class => 'control-label'}
  = f.text_field :title, :class => 'text_field', :placeholder=>'Song title'
  = f.label :suggested_by, 'Your name', :class => 'control-label'
  = f.text_field :suggested_by, :class => 'text_field', :placeholder=>'Your name'
  = f.submit 'Add', :class => 'btn btn-primary'
