= form_for @song_request, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :artist, :class => 'control-label'
    .controls
      = f.text_field :artist, :class => 'text_field'
  .control-group
    = f.label :title, 'Song title', {:class => 'control-label'}
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :suggested_by, 'Your name', :class => 'control-label'
    .controls
      .input-append
        = f.text_field :suggested_by, :class => 'text_field'
        %em.add-on
          %small Leave blank for anonymous
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), song_requests_path, :class => 'btn'
