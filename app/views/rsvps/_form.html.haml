= form_for @rsvp do |f|
  - if @rsvp.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rsvp.errors.count, "error")} prohibited this rsvp from being saved:"
      %ul
        - @rsvp.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :names
    = f.text_field :names
  .field
    = f.label :coming
    = f.check_box :coming
  .field
    = f.label :guests
    = f.number_field :guests
  .actions
    = f.submit 'Save'
